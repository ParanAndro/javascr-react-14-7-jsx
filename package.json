{
  "name": "portfolio-lp-1",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "dependencies": {
    "autoprefixer-cli": "^1.0.0",
    "babel-standalone": "^6.26.0",
    "browser-sync": "^2.22.0",
    "glob-run": "^0.1.6",
    "jshint": "^2.9.5",
    "node-sass": "^4.7.2",
    "nu-html-checker": "^0.1.0",
    "onchange": "^3.3.0"
  },
  "devDependencies": {
    "http-server": "^0.11.1",
    "parallelshell": "^3.0.2"
  },
  "scripts": {
    "test": "npm run test:html",
    "test:html": "glob-run nu-html-checker *.html",
    "test:js": "glob-run jshint components/*.js",
    "init-project": "npm run init:dirs && npm run init:files && npm run init:gitignore && npm run init:npm-install",
    "init:dirs": "mkdir -p sass css vendor images js",
    "init:files": "touch README.md index.html sass/styles.scss js/script.js",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    "init:npm-install": "npm install",
    "bunpmild": "npm run build:sass && npm run build:autoprefixer && npm run test",
    "build:sass": "node-sass --output-style compact --source-map true -o css sass",
    "build:sass:dev": "node-sass --output-style expanded --source-map true -o css sass",
    "build:autoprefixer": "autoprefixer-cli css/styles.css",
    "watch": "parallelshell \"npm run watch:sass\" \"npm run watch:autoprefixer\" \"npm run watch:browser-sync\"",
    "watch:sass": "node-sass --output-style expanded --source-map true -o css sass --watch",
    "watch:autoprefixer": "onchange -d 100 css/styles.css -- autoprefixer-cli -o css/style.prefixed.css css/styles.css",
    "watch:browser-sync": "node_modules/.bin/browser-sync start --server --files \"css/*.css\" \"*.html\" ",
    "start": "http-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ParanAndro/portfolio-lp-1.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ParanAndro/portfolio-lp-1/issues"
  },
  "homepage": "https://github.com/ParanAndro/portfolio-lp-1#readme"
}
